<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <header>
    <% if user_signed_in? %>
    <table>
      <tr>
      <td><%= link_to "投稿フォーム", @book_path %></td>
      </tr>
      <tr>
        <td><%= link_to "Home", user_path(current_user.id) %></td>
      </tr>
      <tr>
      　<td><%= link_to "Users", users_path %></td>
      </tr>
      <tr>
        <td><%= link_to "Books", books_path %></td>
      </tr>
      <tr>
        <td><%= link_to "Log out", destroy_user_session_path, method: :delete %></td>
      </tr>
    <% else %>
      <li>
        <%= link_to "Sign_in", new_user_registration_path %>
      </li>
      <li>
        <%= link_to "Log_in", new_user_session_path %>
      </li>
    <% end %>
    </header>
    <main>
      <%= yield %>
    </main>
  </body>
</html>
