<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
        <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
        <ul>
         <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
         <% end %>
        </ul>
      <% end %>

        <%= form_with model: @user, method: :patch do |f| %>
          <div class="form-group">
            <label for="user_name">Name</label>
             <%= f.text_field :name, class:"form-control name" %>
          </div>
          <div class="form-group">
            <label for="inputImage">Image</label>
             <div><%= f.file_field :profile_image, placeholder:"Image", accept:"image/*" %></div>
          </div>
          <div class="form-group">
            <label for="user_Introduction">Introduction</label>
            <%= f.text_area :introduction, class:"form-control introduction" %>
          </div>
          <%= f.submit "Update User", class:"btn btn-secondary" %>
        <% end %>
    </div>
  </div>
</div>