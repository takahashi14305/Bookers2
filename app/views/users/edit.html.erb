<h2>User info</h2>
<%= form_with model: @user do |f| %>
  <div><label for="inputName">Name</label></div>
  <div><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name"%></div>
  <div><label for="inputImage">Image</label></div>
  <div><%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %></div>
  <div><label for="inputIntroduction">Introduction</label></div>
  <div><%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"Introduction"%></div>
  
  <%= f.submit "Update User" %>
<% end %>