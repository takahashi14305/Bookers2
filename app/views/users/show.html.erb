<div>
  <h2>User info</h2>
  <%= image_tag @user.get_profile_image(100,100) %>
  <p>name<%= @user.name %></p>
  <p>introduction<%= @user.introduction %></p>
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
</div>
<h1>New book</h1>
<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>
<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th colspan="1"></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
<% @books.each do |book| %>
<tbody>
  <tr>
  <td>
  <%= link_to user_path(current_user.id) do %>
  <%= image_tag book.user.get_profile_image(100,100) %></td>
  <% end %>
  <td><%=link_to book.title,book_path(book.id) %></td>
  <td><%= book.body %></td>
  </tr>
</tbody>
</table>
<% end %>
