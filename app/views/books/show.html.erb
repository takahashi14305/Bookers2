<div>
  <%= flash[:notice] %>
</div>
<div>
<h2>User info</h2>
  <%= image_tag @user.get_profile_image(100,100) %>
  <p>name<%= user.name %></p>
  <p>introduction<%= user.introduction %></p>
</div>

<div>
<h1>New book</h1>
<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>
</div>

<h2>Book detail</h2>
<table>
  <tr>
  <td><%= image_tag @book.user.get_profile_image(100, 100) %></td>
  <td><%= @book.title %></td>
  <td><%= @book.body %></td>
  <% if @book.user == current_user %>
    <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
    <td><%= link_to "Destroy", book_path(@book), method: :delete %></td>
  <% end %>
  </tr>
</table>
<p><%= @book.user.name %></p>