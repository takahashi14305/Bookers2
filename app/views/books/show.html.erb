<div>
  <%= flash[:notice] %>
</div>
<div>
<h2>User info</h2>
  <%= image_tag @book.user.get_profile_image(100,100) %>
  <p>name<%= @book.user.name %></p>
  <p>introduction<%= @book.user.introduction %></p>
</div>
<p><%= link_to "my page", user_path(@user) %></p>

<div>
<h1>New book</h1>
<%= form_with model: @book_new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>
</div>

<h2>Book detail</h2>
<table>
  <thead>
  <tr>
  <td><%= link_to user_path(@book.user_id) do %>
    <%= image_tag @book.user.get_profile_image(100, 100) %>
      <% end %></td>
  <td><%= link_to @book.title,book_path(@book.id) %></td>
  <td><%= @book.body %></td>
  <% if @book.user == current_user %>
    <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
    <td><%= link_to "Destroy", book_path(@book), method: :delete %></td>
  <% end %>
  </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= link_to @book.user.name,user_path(@book.user_id) %></td>
    </tr>
  </tbody>
</table>
