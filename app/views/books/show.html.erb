<div>
  <%= flash[:notice] %>
</div>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
     <h2>User info</h2>
     <table class="table">
      <tr><%= image_tag @book.user.get_profile_image(100,100) %></tr>
      <tr>
       <th>name<%= @book.user.name %></th>
      </tr>
      <tr>
       <th>introduction<%= @book.user.introduction %></th>
      </tr>
     </table>
     <div class="row" style="padding-top:50px;">
      <%= link_to edit_user_path(current_user.id), class:"btn btn-outline-secondary btn-block" do %>
        <i class="fas fa-user-cog"></i>
      <% end %>

     </div>
     <h2 class="mt-3">New book</h2>
       <% if @book_new.errors.any? %>
        <%= book.errors.count %>errors prohibited this obj from being saved:
       <ul>
        <% book.errors.full_messages.each do |message| %>
         <li><%= message %></li>
       <% end %>
       </ul>
       <% end %>
       <%= form_with model: @book_new do |f| %>
        <div class="form-group">
         <label for="book_title">Title</label>
         <%= f.text_field :title, class:"form-control book_title" %>
        </div>
        <div class="form-group">
         <label for="book_opinion">Opinion</label>
         <%= f.text_area :body, class:"form-control book_body" %>
        </div>
        <div class="form-group">
　　　　　<%= f.submit 'Create Book', class: "btn btn-success" %>
        </div>
       <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
     <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
       <thead>
         <tr>
          <td><%= link_to user_path(@book.user_id) do %>
           <%= image_tag @book.user.get_profile_image(100, 100) %>
           <% end %>
            <div><%= link_to @book.user.name,user_path(@book.user_id) %></div>
          </td>
          <td><%= link_to @book.title,book_path(@book.id) %>
          </td>
          <td><%= @book.body %>
          </td>
          <% if @book.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-success" %></td>
            <td><%= link_to "Destroy", book_path(@book), method: :delete, class:"btn btn-danger" %></td>
          <% end %>
         </tr>
       </thead>
      </table>
  </div>
</div>
