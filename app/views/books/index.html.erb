<div>
  <%= flash[:notice] %>
</div>
<%= render partial: 'books/list', locals: { user: @user } %>
<h2>Books</h2>
<table>
    <tr>
      <td><colspan="1"></td>
      <td>Title</td>
      <td>Opinion</td>
    </tr>
<% @books.each do |book| %>
<tr><td>
  <%= link_to user_path(current_user.id) do %>
    <%= image_tag book.user.get_profile_image(100, 100) %></td>
  <% end %>
  <td><%= link_to book.title,book_path(book.id) %></td>
  <td><%= book.body %></td>
  </tr>

<% end %>
</table>