<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>

<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th colspan="1"></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
<% @books.each do |book| %>
<tr>
  <%= link_to book_path(book.id) do %>
    <%= image_tag book.user.get_image %>
  <% end %>
  <td><%= image_tag book.user.get_image %></td>
  <td><%= book.title %></td>
  <td><%= book.body %></td>
</tr>

<% end %>
  </tbody>
</table>